<div class="row justify-content-md-center">
  <div class="col-md-4">
    <div class="card">
      <h4 class="card-header">Schedule a Game!</h4>
      <div class="card-body">
      <%= form_for [@season.league, @season, @game] do |f| %>
        <div class="form-group">
          <%= f.label :date %>
          <%= f.date_field :date, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :buy_in %>
          <%= f.text_field :buy_in, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :attendees %>
          <%= f.text_field :attendees, class: 'form-control' %>
        </div>
        <%= f.submit "Schedule Game!", class: "btn btn-outline-primary btn-block" %>
      <% end %>

      </div>
    </div>
  </div>
</div>
