 <table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>#</th>
      <th>Date</th>
      <th>Players</th>
      <th>Buy In</th>
      <th>Pot Size</th>
      <th>Winner</th>
      <th>Runner Up</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each_with_index do |game, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= game.formatted_date %></td>
      <td><%= game.players_count %></td>
      <td><%= number_to_currency(game.buy_in, precision: 0) %></td>
      <td><%= number_to_currency(game.pot_size, precision: 0) %></td>
      <td><%= game.winner.full_name %></td>
      <td><%= game.runner_up.full_name%></td>
    </tr>
  <% end %>
  </tbody>
</table>
